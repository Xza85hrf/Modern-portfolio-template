# Database Configuration
# Format: postgresql://[user]:[password]@[host]:[port]/[dbname]
DATABASE_URL=postgresql://user:password@host:port/dbname

# Database Connection Details
PGUSER=your_db_user              # PostgreSQL username
PGPASSWORD=your_db_password      # PostgreSQL password
PGHOST=your_db_host             # Database host (default: localhost)
PGPORT=your_db_port             # Database port (default: 5432)
PGDATABASE=your_db_name         # Database name

# GitHub Integration
# Generate token at: https://github.com/settings/tokens
# Required scopes: repo
GITHUB_TOKEN=your_github_token

# Security Configuration
# Generate secure random strings for these values in production
# Use: openssl rand -base64 64
JWT_SECRET=your_jwt_secret       # Used for JWT token generation (64+ chars)
COOKIE_SECRET=your_cookie_secret # Used for session cookie encryption (32+ chars)

# Admin Authentication
# Minimum 12 characters, use: openssl rand -base64 18
ADMIN_PASSWORD=your_admin_password  # Password for admin user login

# CORS Configuration (Production)
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=https://yourdomain.vercel.app

# AI Image Generation (Optional)
# Generate key at: https://aistudio.google.com/app/apikey
# Used to generate project thumbnail images with Gemini
GEMINI_API_KEY=your_gemini_api_key

# Analytics Integration (Optional)
# Format: UA-XXXXXXXX-X or G-XXXXXXXXXX
GOOGLE_ANALYTICS_ID=your_ga_id
