{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "outDir": "dist/server",
    "allowImportingTsExtensions": false,
    "sourceMap": true,
    "moduleResolution": "bundler",
    "noEmit": false
  },
  "include": ["server/**/*"],
  "exclude": ["node_modules", "client", "dist"]
}
